	<developers>
		<developer>
			<name>Ben Gidley</name>
			<id>bgidley</id>
			<email>ben@gidley.co.uk</email>
			<roles>
				<role>Developer</role>
			</roles>
			<url>http://www.gidley.co.uk/</url>
		</developer>
	</developers>
	<dependencies>
