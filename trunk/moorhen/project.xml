		<!-- Extra Hivemind Stuff -->
		<dependency>
			<groupId>hivemind</groupId>
			<artifactId>hivemind</artifactId>
			<version>1.0</version>
			<url>http://jakarta.apache.org/hivemind</url>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
		    <groupId>easymock</groupId>
		    <artifactId>easymock</artifactId>
		    <version>1.1</version>
		    <properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
