	<pomVersion>3</pomVersion>
	<id>moorhen</id>
	<name>Moorhen</name>
	<groupId>zebra</groupId>
	<currentVersion>0.1</currentVersion>
	<organization>
		<name>Anite</name>
		<url>http://www.anite.com/publicsector</url>
		<logo>/images/APS_logo.gif</logo>
	</organization>
	<inceptionYear>2005</inceptionYear>
	<package>com.anite.moorhen</package>
	<logo>/images/antelope_small.gif</logo>
	<description>Moorhen - A Zebra Tapestry sample application</description>
	<shortDescription>Zebra tapestry sample</shortDescription>
	<url>http://zebra.berlios.de</url>
	<issueTrackingUrl>http://developer.berlios.de/bugs/?group_id=2683</issueTrackingUrl>
	<siteAddress>shell.berlios.de</siteAddress>
